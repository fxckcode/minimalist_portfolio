---
import Base from "../layout/Base.astro";
import {skills} from '../config';
---

<Base>
	<div class="intro">
		<div class="intro-info">
			<h2>Diego Alejandro Duran</h2>
			<span>FullStack Developer</span>
			<div class="links">
				<button id="github">
					<a
						href="https://github.com/fxckcode"
						class="link"
						target="_blank"
						aria-label="My Github"
					>
						<i class="link-icon fa-lg fab fa-github"></i>
					</a>
				</button>
				<button id="linkedin">
					<a
						href="https://www.linkedin.com/in/diegoalejandroduran/"
						class="link"
						target="_blank"
						aria-label="My LinkedIn"
					>
						<i class="link-icon fa-lg fab fa-linkedin"></i>
					</a>
				</button>
				<button id="cv">
					<a href="./DiegoDuranCV.pdf" class="link" aria-label="My CV">
						<i class="link-icon fa-lg fa-solid fa-file-lines"></i>
					</a>
				</button>
				<button id="email">
					<a href="mailto:alejandroduran076@gmail.com" class="link" aria-label="My Email">
						<i class="link-icon fa-lg fa-solid fa-envelope"></i>
					</a>
				</button>
			</div>
		</div>
	</div>
	<div class="content">
		<div class="content-info">
			<h2>Skills</h2>
			<ul class="skills">
				{
					skills.map((sk) => (
						<li>
							<p>● {sk.tecnologi}</p>
							<div class="wrapper">
								<div class="progress-bar">
									<span
										class="progress-bar-fill"
										style={`width: ${sk.progress}%`}
									/>
								</div>
							</div>
							<p>{sk.progress}%</p>
						</li>
					))
				}
			</ul>
			<h2>Education</h2>
			<div class="education text-left">
				<h3 class="text-2xl">Humberto Muñoz Ordoñez</h3>
				<p class="text-gray-500 text-lg">
					High School Graduate | 2017 - 2022
				</p>
			</div>
			<div class="education text-left">
				<h3 class="text-2xl">Mision Tic</h3>
				<p class="text-gray-500 text-lg">
					FullStack Course | Feb 2021 - Dec 2021
				</p>
				<ul>
					<li>HTML | CSS | JS - PYTHON | DJANGO</li>
				</ul>
			</div>
			<div class="education text-left mb-3">
				<h3 class="text-2xl">SENA</h3>
				<p class="text-gray-500 text-lg">
					System Technique | Feb 2021 - Dec 2022
				</p>
				<p class="text-gray-500 text-lg">
					Software Analysis and Development | Feb 2023 - Jun 2024
				</p>
				<ul>
					<li>HTML | CSS | JS - PHP | KOTLYN | PYTHON | SQL</li>
				</ul>
			</div>
			<h2>Projects</h2>
			<div class="education text-left">
				<h3 class="text-2xl">LinkCafé</h3>
				<p class="text-gray-500 text-lg">
					Professional Social Network for coffee growers.
				</p>
			</div>
			<div class="education text-left">
				<h3 class="text-2xl">NaranjaERP</h3>
				<p class="text-gray-500 text-lg">
					Accounting software for entrepreneurs
				</p>
			</div>
		</div>
	</div>
</Base>
